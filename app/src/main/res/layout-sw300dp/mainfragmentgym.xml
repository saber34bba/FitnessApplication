<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <ScrollView
        android:fillViewport="false"
        android:scrollbars="vertical"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <TextView
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:textColor="#000000"
                android:fontFamily="casual"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:text="Hey Mr"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="#D3D1D1"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text=" what are you \nup today ?!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <androidx.cardview.widget.CardView
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/cardviewlossWeight"
                android:transitionName="cardtransition"
                app:cardBackgroundColor="#CFCDCF"
                android:layout_width="match_parent"
                android:elevation="3dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <FrameLayout
                        android:id="@+id/frameweight"
                        android:layout_width="match_parent"
                        android:layout_height="280dp">
                        <ImageView
                            android:transitionName="imagetransition"
                            android:id="@+id/imageweight"
                            android:background="@mipmap/weightloss"
                            android:layout_width="match_parent"
                            android:layout_height="210dp" />
                        <Button
                            android:elevation="3dp"
                            android:textColor="#fff"
                            android:layout_gravity="bottom|center"
                            android:background="@drawable/touchcircle"
                            android:text="GO"
                            android:fontFamily="casual"
                            android:textSize="20sp"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                    </FrameLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:fontFamily="casual"
                android:layout_marginStart="2dp"
                android:textColor="#050505"
                android:layout_gravity="center"
                android:text="Fitness Exercices"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:background="#424242"
                android:layout_width="match_parent"
                android:layout_height="1dp">

            </View>

            <androidx.cardview.widget.CardView
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/cardviewFitness"
                android:transitionName="cardtransition"
                app:cardBackgroundColor="#CFCDCF"
                android:layout_width="match_parent"
                android:elevation="3dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">




            <RelativeLayout
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="270dp">

                <FrameLayout
                    android:id="@+id/framefitness"
                    android:layout_width="match_parent"
                    android:layout_height="280dp">
                    <ImageView
                        android:id="@+id/imagefitness"
                        android:background="@mipmap/fitnesswall"
                        android:layout_width="match_parent"
                        android:layout_height="210dp" />

                    <Button
                        android:layout_gravity="center|bottom"
                        android:background="@drawable/touchcircle"
                        android:text="GO"
                        android:id="@+id/vfitnessbtn"
                        android:elevation="3dp"
                        android:textSize="20sp"
                        android:fontFamily="casual"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                </FrameLayout>



            </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <TextView
                android:fontFamily="casual"
                android:layout_marginStart="2dp"
                android:textColor="#050505"
                android:layout_gravity="center"
                android:text="Body Building Exercices"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:background="#424242"
                android:layout_width="match_parent"
                android:layout_height="1dp">

            </View>

            <androidx.cardview.widget.CardView
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/cardviewBodybuild"
                app:cardBackgroundColor="#FFFEFE"
                android:layout_width="match_parent"
                android:elevation="3dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <FrameLayout
                        android:layout_marginBottom="10dp"
                        android:id="@+id/frame"
                        android:background="@mipmap/nature"
                        android:layout_width="match_parent"
                        android:layout_height="250dp">


                        <ImageView
                            android:scaleType="centerInside"
                            android:layout_margin="60dp"
                            android:src="@mipmap/expertlift"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <Button
                            android:background="@drawable/touchcircle"
                            android:text="GO"
                            android:elevation="3dp"
                            android:layout_gravity="bottom|center"
                            android:layout_width="50dp"
                            android:fontFamily="casual"
                            android:textSize="20sp"
                            android:textColor="#000"
                            android:textStyle="bold|italic"
                            android:layout_height="50dp" />
                    </FrameLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <include layout="@layout/fragmentgym"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>